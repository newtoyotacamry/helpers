return function(sessionToken)
    local expectedToken = _G.__NoxSecureSession
    local player = game:GetService("Players").LocalPlayer

    -- ğŸ” Strong verification
    if not expectedToken or sessionToken ~= expectedToken then
        warn("ğŸš« Unauthorized script access attempt detected.")
        return
    end

    -- âœ… Optional: Lock by HWID, userId, or game ID
    local allowedHWID = "XYZ-123-HWID" -- Example
    local hwid = game:GetService("RbxAnalyticsService"):GetClientId()
    local allowedUserIds = {12345678, 987654321} -- Add your userId(s)
    local isAllowedUser = table.find(allowedUserIds, player.UserId)

    if hwid ~= allowedHWID or not isAllowedUser then
        warn("ğŸš« Unauthorized HWID or user.")
        return
    end

    -- âœ… Secure logic continues here
    print("âœ… Protected script loaded successfully.")
end
