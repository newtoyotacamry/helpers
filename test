return function(trigger)
    print("🔍 Reached start of protected script")

    if not trigger or trigger.__NoxTrigger ~= true then
        warn("🚫 ProtectedScript: Unauthorized access attempt detected.")
        print("❌ This script can only be run through the official loader button.")
        return "__unauthorized__"
    end

    print("✅ Protected script loaded and executed via secure button.")
end
